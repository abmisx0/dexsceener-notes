{
    "manifest_version": 3,
    "name": "DexScreener Notes",
    "version": "1.0",
    "description": "Add notes to DexScreener pools",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://dexscreener.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon-16.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://dexscreener.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    }
}